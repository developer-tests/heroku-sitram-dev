@charset "utf-8";
/* CSS Document */

* {
  box-sizing: border-box;
}
.fixed-top {
    padding: 30px 0px;
}
.carousel-item {
  height: 100vh;
  min-height: 300px;
  background: no-repeat center center scroll;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.carousel-caption {
  bottom: 190px;
}

.carousel-caption h5 {
      font-size: 50px;
    letter-spacing: 2px;
    margin-top: 25px;
    text-align: left;
    font-weight: 300;
	margin-bottom: 90px;
}

.carousel-caption button{
  background-color: #1d7ac0;
  color: white;
  border: none;    
	float: left;
    padding: 10px 20px;
	border-radius: 10px;
	
}

.navbar-light .navbar-brand {
  color: #fff;
  font-size: 25px;
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 2px;
}

.navbar-light .navbar-nav .active > .nav-link, .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .nav-link.show, .navbar-light .navbar-nav .show > .nav-link {
  color: #fff;
	margin-right: 20px;
    font-size: 14px;
}

.navbar-light .navbar-nav .nav-link {
  color: #fff;
	font-size: 14px;
}

.navbar-toggler {
  background: #fff;
}

.navbar-nav {
  text-align: left;
}

.nav-link {
  padding: .2rem 1rem;
}

.nav-link.active,.nav-link:focus{
  color: #fff;
}

.navbar-toggler {
  padding: 1px 5px;
  font-size: 18px;
  line-height: 0.3;
}

.navbar-light .navbar-nav .nav-link:focus, .navbar-light .navbar-nav .nav-link:hover {
  color: #fff;
}






